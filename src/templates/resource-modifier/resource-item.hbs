<tr class="resource-row">
  <td class="resource-label">{{localize label}}</td>
  <td>
    <div class="progress">
      <div class="back {{class}}">{{current}} / {{max}}</div>
      <div
        class="front"
        style="clip-path: inset(0 0 0 {{perc}}%); -webkit-clip-path: inset(0 0 0 {{perc}}%)"
      >{{current}} / {{max}}</div>
    </div>
  </td>
</tr>